<Window x:Class="SymLinker.Windows.ImportLinksDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SymLinker.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="Import Links" Height="Auto" Width="400" SizeToContent="Height">
    <Grid>
        <StackPanel Margin="8">

            <Label FontWeight="Bold" Margin="-3,0,0,0">Selected Directory</Label>
            <TextBlock Margin="3,0,3,8">Link Type</TextBlock>

            <Label FontWeight="Bold" Margin="-3,0,0,0">Found Links</Label>
            <ListBox Name="ListFoundLinks" Margin="0,0,0,8" MinHeight="100" SelectionMode="Multiple" SelectionChanged="ListFoundLinks_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="ButtonOK" Width="70" IsDefault="True" Content="OK" Margin="0,0,8,0" Click="ButtonOK_Click" IsEnabled="False" />
                <Button Width="70" IsCancel="True" Content="Cancel" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
